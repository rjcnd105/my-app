{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ES2021",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "preserve",
    "allowJs": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "paths": {
      "@assets/*": ["./assets/deopjib_assets/*"],
      "@web_ui/*": ["./lib/deopjib_web_ui/*"],
      "@web/*": ["./lib/deopjib_web/*"]
    }
  },
  "include": [
    "./assets/js/**/*",
    "./lib/deopjib_web_ui/**/*.ts",
    "./lib/deopjib_web/**/*.ts"
  ]
}
