{
  "name": "melt",
  "type": "module",
  "version": "0.18.4",
  "license": "MIT",
  "repository": "github:melt-ui/next-gen",
  "author": "Thomas G. Lopes",
  "homepage": "https://next.melt-ui.com/",
  "description": "The next generation of Melt UI. Built for Svelte 5.",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./builders": {
      "types": "./dist/builders/index.d.ts",
      "svelte": "./dist/builders/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "svelte": "./dist/components/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "!dist/**/*.spec.*",
    "!dist/**/*.test.*",
    "dist"
  ],
  "keywords": [
    "svelte",
    "UI",
    "melt",
    "headless",
    "component",
    "library"
  ],
  "peerDependencies": {
    "@floating-ui/dom": "^1.6.0",
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/kit": "^2.15.2",
    "@sveltejs/package": "^2.3.9",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "jsdom": "^24.1.0",
    "publint": "^0.1.9",
    "svelte": "5.19.1",
    "svelte-check": "^4.1.3",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3",
    "vite": "^6.0.7"
  },
  "svelte": "./dist/index.js",
  "dependencies": {
    "@floating-ui/dom": "^1.6.13",
    "jest-axe": "^9.0.0",
    "nanoid": "^5.0.9",
    "runed": "^0.23.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "pnpm sync && pnpm watch",
    "test": "vitest",
    "sync": "svelte-kit sync",
    "build": "npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "watch": "svelte-kit sync && svelte-package --watch"
  }
}